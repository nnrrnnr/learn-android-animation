<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.watanabear.learnandroidanimation.wavecanvas.WaveCanvasActivity">


    <com.github.watanabear.learnandroidanimation.wavecanvas.WaveView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:wave_color="@color/colorAccent" />

    <com.github.watanabear.learnandroidanimation.wavecanvas.WaveView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        app:wave_color="@color/colorPrimary" />

    <com.github.watanabear.learnandroidanimation.wavecanvas.WaveView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        app:wave_color="@color/colorPrimaryDark" />

</RelativeLayout>
